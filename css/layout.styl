html
  background url("images/big-clouds.jpg") center bottom // TODO
  background-size cover
  font 16px "Open Sans", sans-serif
  min-height 100%
  position relative

body
  background transparent
  min-height 100%

.stack > section
  display none

  &.active
    display block

nav
  border-top 1px solid #fff
  border-bottom 1px solid $gray-light
  panel()
  position absolute
  left 0
  top 0

  li
    a
      border-top 1px solid #fff
      border-bottom 1px solid $gray-light
      color $gray-dark
      display block
      font-size 11px
      font-weight bold
      padding 10px 20px
      text-align center
      text-decoration none

      &:hover,
      &.active
        color $black

    &:first-child a
      border-top 0

    &:last-child a
      border-bottom 0

[data-popup]
  cursor pointer

.popup-content
  display none
