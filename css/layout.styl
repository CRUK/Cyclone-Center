html
  background url("images/big-clouds.jpg") center bottom // TODO
  background-size cover
  font 16px "Open Sans", sans-serif
  min-height 100%
  position relative

body
  background transparent
  min-height 100%

.stack > section
  display none

  &.active
    display block

nav
  panel()
  float left

  li
    a
      border-top 1px solid $gray
      color inherit
      display block
      font-size 12px
      font-weight bold
      padding 5px 20px
      text-decoration none
      text-transform uppercase

    &:first-child a
      border-top 0

[data-popup]
  cursor pointer

.popup-content
  display none
