#profile
  .panel
    panel()
    float right
    text-align center

    header
      padding 20px

    .favorites
      border-top 1px solid $gray
      max-height 500px
      overflow-y auto
      padding 10px 20px 20px

      .none
        display none

      ul
        li
          clearfix()
          margin-top 10px
          position relative
          text-align left

          button[name="remove-favorite"]
            @standard-button()
            border-radius 50%
            display none
            height 16px
            padding 0
            position absolute
            left -5px
            top -5px
            width 16px

          button[name="reveal"]
            standardButton()

          img
            height 60px
            float left
            width 60px
            margin-right 10px

          .description
            font-size 13px
            float left

          &:hover button[name="remove-favorite"]
            display block

    .recents
      display none
