.classifier
  background $white
  box-shadow 0 5px 10px $gray
  width 650px

  img
    box-sizing border-box
    display block

  button
    appearance(none)
    background transparent
    border 0
    cursor pointer
    padding 0

    &::-moz-focus-inner
      border 0
      padding 0

  .main-pair
    clearfix()
    padding 20px 0 20px 20px

    img
      float left
      height 300px
      margin-right 10px
      width 300px

      &.selected
        border 3px solid $greenish

  .categories,
  .selections
    clearfix()
    padding 20px 0 20px 20px

    li
      display block
      float left

      button
        display block
        margin-right 15px
        position relative

        img
          height 110px
          width 110px

        &.selected img
          border 3px solid $greenish

  .categories button
    &.selected:before,
    &.selected:after
      border 10px solid transparent
      border-top 10px solid $white
      content " "
      left 50%
      margin 20px 0 0 -10px
      position absolute
      top 100%

    &.selected:before
      border-top-color $gray
      margin-top 21px
      opacity 0.5

  .selections
    background $gray-light
    box-shadow 0 0 3px $gray inset
