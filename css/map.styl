.map
  position relative

  &.full-screen
    full-size()
    z-index 1

    .leaflet-control-zoom
      background transparent
      margin 5px
      padding 0

      a
        background-color transparent
        display inline-block
        margin 0
        padding 6px

  .map-label
    color $white
    display inline-block
    font-size 12px
    font-weight bold
    position relative
    text-shadow 0 1px 1px $black
    white-space nowrap

    &:before
      background $black
      border-radius 50%
      content: " "
      height 10px
      margin -5px 7px 0 0
      position absolute
      right 100%
      top 50%
      width 10px

    &:hover,
    &.hovering
      &:before
        height 16px
        margin -8px 4px 0 0
        width 16px
