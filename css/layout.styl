html
  background url("images/big-clouds.jpg") fixed center bottom
  background-size cover
  font 16px "Open Sans", sans-serif
  height 100%
  position relative

body
  background transparent
  min-height 100%
  position relative

#zooniverse-top-bar-button
  margin-left -500px

#wrapper
  height auto // Reset on window resize
  left 0
  position relative
  top 0
  width 100%

  &.stack > section
    display none

    &.active
      display block

  > nav
    background $white
    color $gray-dark
    left 0
    position relative
    text-align center
    top 0
    width 100%
    z-index 3

    a.logo
      border-right 1px solid $gray
      color $black
      display inline-block
      font-weight bold
      padding 10px 20px

    ul
      display inline-block

      li
        display inline-block

        a,
        button
          color inherit
          display block
          font-size 12px
          font-weight bold
          padding 7px 10px
          text-decoration none

          &:hover,
          &.active
            color $black

a
  color $blue
  text-decoration none

figure
  font-size 12px
  margin 0 10px 0 0
  text-align center

  img
    display block

  figcaption
    font-weight bold

.hang-left
  float left
  margin-right  10px

.hang-right
  float right
  margin-right  10px

[data-popup]
  cursor pointer

.popup-content
  display none

.to-do
  outline 1px dashed rgba($orange, 0.75)

#feedback .panel
  panel()
  float right
  padding 3px
  width 760px
