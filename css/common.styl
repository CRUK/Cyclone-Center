$open-sans-condensed = "Open Sans Condensed", "Arial Narrow", sans-serif

strong
  font-weight bold

// Button reset
button
  appearance(none)
  background transparent
  border 0
  cursor pointer
  margin 0
  padding 0

  &::-moz-focus-inner
    border 0
    padding 0

  &:disabled
    cursor default
    pointer-events none

standard-button()
  // Note: .toggle, .toggle.selected, .default
  box-sizing(border-box)
  background $gray-light
  border 1px solid #b2b2b2
  border-radius 3px
  box-shadow inset 0px 1px 0px #ffffff
  color $black
  display inline-block
  font-family "Open Sans", sans-serif
  font-weight 600
  font-size 13px
  line-height 1
  margin-left 0.75em
  padding 0.5em 2em
  text-decoration none
  text-shadow 0 1px 0px $white
  vertical-align middle

  &:first-child
    margin-left 0

  &:hover
    border-color rgba($black, 0.5)

  &.toggle.selected
    color $orange

  &.default
    background $blue
    color $white
    text-shadow 0 1px 0px #006084
    box-shadow inset 0px 1px 0px #00a8e6
    border 1px solid #016387

    &:hover
      border-color rgba($black, 0.75)

  &.toggle.selected,
  &:active
    box-shadow 0 0.125ex 0.25ex rgba($blacker, 0.5) inset

  &:disabled
    box-shadow none
    opacity 0.5

panel()
  background $white
  border-radius 5px
  box-shadow 0 5px 10px rgba($black, 0.33)
  color $black
  margin 55px 30px 30px
  position relative
  z-index 2

  h2
    font 20px "Open Sans Condensed", sans-serif

  h3
    font 16px "Open Sans Condensed", sans-serif

  h4
    font-weight bold

full-size()
  bottom 0
  left 0
  position absolute
  top 25px // Leave space for Zooniverse top bar.
  right 0
