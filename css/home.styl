#home
  background linear-gradient($black, transparent)
  bottom 0
  color $white
  left 0
  position absolute
  right 0
  text-align center
  top 0
  z-index 1

  header
    position absolute
    top 20%
    width 100%

    h1
      img
        margin-bottom -50px

    p
      margin 1.5em 0

    a.classify
      standard-button()
      font-weight bold
      margin-top 25px
      padding 10px 30px