#home
  full-size()
  background linear-gradient($black, transparent)
  color $white

  header
    font-size 14px
    line-height 1.4
    margin 90px auto
    text-shadow 0 1px 1px rgba(black, 0.5)
    width 1000px

    h1
      border-bottom 1px solid rgba($white, 0.5)
      margin-bottom 20px

      img
        margin 0 0 -10px -20px
        max-width 50%

    h2
      font-size 18px
      font-weight bold

    p
      margin 1.5em 0

    a.classify
      standard-button()
      background: $orange
      border 0
      box-shadow 0 1px 1px rgba(white, 0.25) inset, 0 -1px 1px rgba(black, 0.25) inset, 0 3px 5px rgba(black, 0.5)
      color $white
      font-size 18px
      font-weight bold
      margin-top 25px
      padding 15px 25px
      text-shadow 0 1px 1px rgba($black, 0.5)
