.bar-chart
  clearfix()
  font-size 11px
  overflow-x auto
  overflow-y hidden
  position relative
  white-space nowrap

  .axis
    &.x
      text-align center

    &.y
      display inline-block
      height: 100px
      width: 10px
      position relative

      .label
        transform(rotate(-90deg))
        transform-origin(0 100%)
        bottom 0
        left 100%
        position absolute
        text-align center
        width 100px

  .item
    display inline-block
    height 100px
    position relative
    width 5px
    margin-right 5px

    .bar
      background $gray
      bottom 0
      left 0
      position absolute
      width 100%

    .label
      display none
      position absolute
      top 100%

    &:hover
      .bar
        background $blue

      .label
        display block
