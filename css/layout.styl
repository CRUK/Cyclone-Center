html
  background url("images/big-clouds.jpg") fixed center bottom
  background-size cover
  font 16px "Open Sans", sans-serif
  height 100%
  position relative

body
  background transparent
  min-height 100%
  position relative

#wrapper
  height auto // Reset on window resize
  left 0
  position absolute
  top 100px
  width 100%

  &.stack > section
    display none

    &.active
      display block

  > nav
    panel()
    border-top 1px solid #fff
    border-bottom 1px solid $gray-light
    position absolute
    left 0
    top 100px
    z-index 3

    ul
      panel()
      border-top 1px solid #fff
      border-bottom 1px solid $gray-light

      & + ul
        margin-top -15px

      li
        a,
        button
          border-top 1px solid #fff
          border-bottom 1px solid $gray-light
          color $gray-dark
          display block
          font-size 11px
          font-weight bold
          padding 7px 10px
          text-align center
          text-decoration none

          &:hover,
          &.active
            color $black

        &:first-child
          a,
          button
            border-top 0

        &:last-child
          a,
          button
            border-bottom 0

a
  color $blue
  text-decoration none

figure
  font-size 12px
  margin 0 10px 0 0
  text-align center

  img
    display block

  figcaption
    font-weight bold

.hang-left
  float left
  margin-right  10px

.hang-right
  float right
  margin-right  10px

[data-popup]
  cursor pointer

.popup-content
  display none

.to-do
  outline 1px dashed rgba($orange, 0.75)

#feedback .panel
  panel()
  float right
  padding 3px
  width 760px
