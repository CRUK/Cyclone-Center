html
  background url("images/big-clouds.jpg") center bottom // TODO
  background-size cover
  font 16px "Open Sans", sans-serif
  height 100%
  position relative
  width 100%

body
  background transparent
  height 100%
  position relative
  width 100%

.stack
  & > section
    display none

    &.active
      display block

nav
  panel()
  position absolute
  left 7%
  top 3%
  z-index: 1

  li
    a
      border-top 1px solid $gray
      color inherit
      display block
      font-size 12px
      font-weight bold
      padding 5px 20px
      text-decoration none
      text-transform uppercase

    &:first-child a
      border-top 0

[data-popup]
  border-bottom 1px dashed rgba($gray, 0.5)
  cursor pointer

.popup-content
  display none
