.tutorial.dialog-underlay
  .dialog
    transition left 0.25s ease-out, top 0.25s ease-out 0.1s
    border 3px solid $blue
    z-index 999

    .dialog-closer
      position absolute
      right 0
      top 0

    > footer
      display block

    .dialog-arrow
      &[data-direction="top"]
        border-bottom-color $blue

      &[data-direction="right"]
        border-left-color $blue

      &[data-direction="bottom"]
        border-top-color $blue

      &[data-direction="left"]
        border-right-color $blue

  &.next-on-action
    .dialog > footer
      display none
